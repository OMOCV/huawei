{
  "id": "vmall.app.sub",
  "name": "华为商城监控",
  "author": "@Claude",
  "icon": "https://m.vmall.com/images/favicon-v3.ico",
  "repo": "",
  "apps": [
    {
      "id": "vmall",
      "name": "华为商城商品状态监控",
      "descs_html": [
        "基于BoxJS的华为商城商品状态监控工具",
        "支持监控多个商品，定时检查并通知状态变化"
      ],
      "keys": [
        "products",
        "pushDeerKey",
        "pushDeerUrl",
        "checkInterval",
        "notifyOnlyOnChange",
        "debug"
      ],
      "settings": [
        {
          "id": "products",
          "name": "监控商品",
          "val": [
            {
              "id": "10086989076790",
              "name": "华为 Mate 70 Pro+",
              "url": "https://m.vmall.com/product/10086989076790.html",
              "enabled": true
            }
          ],
          "type": "JSON",
          "desc": "监控的商品列表，可以添加多个"
        },
        {
          "id": "pushDeerKey",
          "name": "PushDeer Key",
          "val": "",
          "type": "text",
          "desc": "PushDeer 推送服务的 Key"
        },
        {
          "id": "pushDeerUrl",
          "name": "PushDeer URL",
          "val": "https://api2.pushdeer.com/message/push",
          "type": "text",
          "desc": "PushDeer 推送服务的 URL"
        },
        {
          "id": "checkInterval",
          "name": "检查间隔(分钟)",
          "val": 5,
          "type": "number",
          "desc": "自动检查的时间间隔，单位为分钟"
        },
        {
          "id": "notifyOnlyOnChange",
          "name": "仅状态变化时通知",
          "val": true,
          "type": "boolean",
          "desc": "启用后，仅在商品状态发生变化时发送弹窗通知"
        },
        {
          "id": "debug",
          "name": "调试模式",
          "val": false,
          "type": "boolean",
          "desc": "启用调试模式，会输出更多日志信息"
        }
      ],
      "scripts": [
        {
          "name": "执行商品状态检查",
          "script": "vmall-boxjs.js"
        }
      ],
      "author": "@Claude",
      "repo": "",
      "icons": [
        "https://m.vmall.com/images/favicon-v3.ico",
        "https://m.vmall.com/images/favicon-v3.ico"
      ]
    }
  ]
}