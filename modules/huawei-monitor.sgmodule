[Module]
# 模块名称
Name = 华为商品状态监控
# 版本号
Version = 1.1
# 维护者信息
Author = by@OMOCV
# 说明
Description = 监控华为商城商品的预约/开售状态，修复API请求失败和JSON解析错误

[Script]
# **拦截商品详情页请求，并运行监控脚本**
http-response ^https:\/\/m\.vmall\.com\/product\/comdetail\/index\.html\?prdId=\d+ requires-body=1,max-size=524288,script-path=https://raw.githubusercontent.com/OMOCV/huawei/main/scripts/huawei-monitor-script.js

[MITM]
hostname = m.vmall.com